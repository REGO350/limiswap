{
  "name": "limiswap",
  "version": "1.0.0",
  "description": "Smart contract for LimiSwap",
  "main": "index.ts",
  "scripts": {
    "postinstall": "yarn generate-types",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "build": "rm -rf artifacts cache typechain | yarn compile",
    "format": "prettier --write .",
    "script:kovan": "npx hardhat run --network kovan",
    "script:local": "npx hardhat run --network localhost",
    "generate-types": "rimraf abis/types; typechain --target=ethers-v5 --out-dir 'abis/types' 'abis/*.json'"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
