    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.2.22",
    "@types/edit-json-file": "^1.6.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "edit-json-file": "^1.6.2",
    "ethereum-waffle": "3.4.0",
    "ethers": "^5.5.1",
    "hardhat": "^2.7.0",
    "hardhat-deploy": "^0.9.12",
    "hardhat-deploy-ethers": "^0.3.0-beta.11",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.5.0",
